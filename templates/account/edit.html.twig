{% extends 'base.html.twig' %}

{% block title %}Edit Account{% endblock %}

{% block body %}
    <h1>Edit Account</h1>
    {{ account.pseudo }}
    {{ include('account/_form.html.twig', {'button_label': 'Update'}) }}

{% if (section-1) > 0 %}
<a href="{{ path('app_account_edit', {'id': account.id, 'section': (section-1)}) }}">Section précédente</a>
{% endif %}
{% if (section+1) < 3 %}
<a href="{{ path('app_account_edit', {'id': account.id, 'section': (section+1)}) }}">Section suivante</a>
{% endif %}

{% endblock %}
